doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css", integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M", crossorigin="anonymous")
  body
    div(class = 'container')
      h1(class = 'text-center') Signup for Play60!
      form(method='POST')
        div(class = 'form-group')
          label Name
          input(type = 'text' class = 'form-control' name = 'name_input' aria-describedby="emailHelp" placeholder="George Kunthara")
        div(class = 'form-group')
          label Age
          input(type = 'text' class = 'form-control' name = 'age_input' aria-describedby="emailHelp" placeholder="18")
        div(class = 'form-group')
          label Email Address
          input(type = 'email' class = 'form-control' name = 'email_input' aria-describedby="emailHelp" placeholder="Enter email")
        div(class = 'form-group')
          label Password
          input(type = 'password' class = 'form-control' name = 'password_input' aria-describedby="passwordHelp" placeholder="Password")
        div(class = 'form-group')
          label Confirm Password
          input(type = 'password' class = 'form-control' name = 'password_c_input' aria-describedby="passwordHelp" placeholder="Confirm Password")
        button(type = 'submit' class = 'btn btn-primary') Signup!
        if error == 'in-use'
          div(class="alert alert-danger" role="alert")
            label(style = 'margin-left:50px') Email already in use
        if error == 'password-match'
          div(class="alert alert-danger" role="alert")
            label(style = 'margin-left:50px') Passwords do not match

        div
          label Already have an account?
          a(href = '/login')    Login!